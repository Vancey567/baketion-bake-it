<section class="login flex justify-center pt-6">
  <div class="w-full md:max-w-3xl">
    <h1 class="sellHead content-center font-bold text-center text-3xl bg-primary">Sell with us</h1>
    <form action="/admin/sellerRegistration" method="POST"
      class="bg-white shadow-md rounded px-6 md:px-12 pt-10 pb-10 mt-4 mb-4 mx-2 w-full">
      <% if(messages.error) { %>
        <span class="text-red-500 text-sm">
          <%= messages.error %>
        </span>
        <% } %>
          <div class="md:flex justify-between w-full">
            <div class="w-full md:px-6">
              <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
                  Name
                </label>
                <input name="name" value="<%= messages.name %>"
                  class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none  focus:shadow-outline "
                  id="username" type="Name" placeholder="Enter your name" />
              </div>
              <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
                  Email
                </label>
                <input name="email" value="<%= messages.email %>"
                  class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                  id="email" type="email" placeholder="Enter your email" />
              </div>
              <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="phone">
                  Phone
                </label>
                <input name="phone" value="<%= messages.phone %>"
                  class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                  id="phone" type="phone" placeholder="Enter your phone number" />
              </div>
              <a class="inline-block align-baseline font-bold text-sm hidden md:block" href="/login">
                Already have account?
              </a>
            </div>
            <div class="w-full md:px-6">
              <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="address">
                  Address
                </label>
                <input name="address" value="<%= messages.address %>"
                  class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                  id="address" type="address" placeholder="Enter your address" />
                </div>
              <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="story">
                  Your Story
                </label>
                <input name="story" value="<%= messages.story %>"
                  class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                  id="story" type="story" placeholder="Tell us your story" />
              </div>
              <div class="mb-1">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
                  Password
                </label>
                <input name="password"
                  class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
                  id="password" type="password" placeholder="******************" autocomplete="on" />
              </div>
              <div class="flex items-center justify-between">
                <button
                  class="btn-primary rounded-full text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                  type="submit">
                  Register
                </button>
                <a class="inline-block align-baseline font-bold text-sm block md:hidden" href="/login">
                  Already have account?
                </a>
              </div>
              
            </div>
          </div>
    </form>
    <p class="text-center text-gray-500 text-xs mb-6 md:mb-2">
      &copy;2020 Baketion. All rights reserved.
    </p>
  </div>
</section>